{% extends 'base.html.twig' %}

{% block title %}Nos Spectacles{% endblock %}

{% block body %}

    <div class="container-fluid">


    <h1>Nos Spectacles</h1>

    <div class="spectacles col-10">
        {% set break = false %}

        {% for show in shows if not break %}

        <div class="card mb-3">
            <img src="{{ absolute_url(asset('images/magician.jpg')) }}" class="card-img-top shows" alt="Magie">
            <div class="card-body">
                <h5 class="card-title">Magie</h5>
                <p class="card-text">{{ show.description }}</p>
            </div>
        </div>

        <div class="card mb-3">
            <img src="{{ absolute_url(asset('images/lions.jpg')) }}" class="card-img-top" alt="Animaux">
            <div class="card-body">
                <h5 class="card-title">Animaux</h5>
                <p class="card-text">{{ show.description }}</p>
            </div>
        </div>

        <div class="card mb-3">
            <img src="{{ absolute_url(asset('images/acrobats.jpg')) }}" class="card-img-top" alt="Acrobates">
            <div class="card-body">
                <h5 class="card-title">Acrobates</h5>
                <p class="card-text">{{ show.description }}</p>
            </div>
        </div>

        <div class="card mb-3">
            <img src="{{ absolute_url(asset('images/clown.jpg')) }}" class="card-img-top" alt="Clowns">
            <div class="card-body">
                <h5 class="card-title">Clowns</h5>
                <p class="card-text">{{ show.description }}</p>
            </div>
        </div>

        <div class="card mb-3">
            <img src="{{ absolute_url(asset('images/juggler1.jpg')) }}" class="card-img-top show-img" alt="Jongleurs">
            <div class="card-body">
                <h5 class="card-title">Jongleurs</h5>
                <p class="card-text">{{ show.description }}</p>
            </div>
        </div>

        <div class="card mb-3">
            <img src="{{ absolute_url(asset('images/fireeater.jpg')) }}" class="card-img-top" alt="Cracheurs de feu">
            <div class="card-body">
                <h5 class="card-title">Cracheurs de feu</h5>
                <p class="card-text">{{ show.description }}</p>
            </div>
        </div>
            {% if show.id == 3 %}
                {% set break = true %}
            {% endif %}
        {% endfor %}
    </div>


    </div>



{% endblock %}
